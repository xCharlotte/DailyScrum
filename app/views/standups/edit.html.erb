<h1>Bewerk Stand-ups</h1>
 
<%= form_for :standup, url: standup_path(@standup), method: :patch do |f| %>
 
<% if @standup.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@standup.errors.count, "error") %> 
prohibited
        this standup from being saved:
      </h2>
      <ul>
        <% @standup.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.collection_select(:team_id, @team, :id, :full_name, {},{}) %>
  </p>

  <p>
    <%= f.label 'Wat heb je gister gedaan?' %><br>
    <%= f.text_area :yesterday %>
  </p>
 
  <p>
    <%= f.label 'Wat ga je vandaag doen?' %><br>
    <%= f.text_area :today %>
  </p>

 <p>
   <%= f.label 'Liep je ergens tegenaan?' %><br>
   <%= f.text_area :problems %>
  </p>
 
  <p>
    <%= f.submit 'Opslaan' %>
  </p>
 
<% end %>
 
